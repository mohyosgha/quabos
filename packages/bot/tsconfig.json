{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "removeComments": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": "./src"
  }
}
