{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ESNext",

    "outDir": "dist/",
    "removeComments": true,

    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@commands/*": ["src/commands/*"],
      "@events/*": ["src/events/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
