generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("CONNECTION_STRING")
}

model Guild {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  guildId String @unique
  name    String

  watchChannels Channel[] @relation("GuildChannels")
}

model Channel {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  channelId String @unique

  messages Message[] @relation("ChannelMessages")

  guild   Guild?  @relation("GuildChannels", fields: [guildId], references: [id])
  guildId String?
}

model Message {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  messageId String @unique
  content   String

  channel   Channel? @relation("ChannelMessages",fields: [channelId], references: [id])
  channelId String?
}